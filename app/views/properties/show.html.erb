<p id="notice"><%= notice %></p>

<p>
  <strong>name:</strong>
  <%= @property.name %>
</p>

<p>
  <strong>rent:</strong>
  <%= @property.rent %>
</p>

<p>
  <strong>address:</strong>
  <%= @property.address %>
</p>

<p>
  <strong>year:</strong>
  <%= @property.year %>
</p>

<p>
  <strong>remarks:</strong>
  <%= @property.remarks %>
</p>

<%if @property.stations.present?%>
    <h2>Nearest station/s</h2>
<%end%>

<%= @property.stations.count %>
<% @property.stations.each do |station|%>
  <%if station.line.blank? && station.name.blank? && station.minutes.blank?%>
      <p>There is no near station set</p>
  <% elsif station.line.blank? || station.name.blank? || station.minutes.blank? %>
    <p>the info of the station are not complete</p>
  <% else %>
    <p>
        <strong>line:</strong>
        <%= station.line %>
    </p>

    <p>
        <strong>name:</strong>
        <%= station.name %>
    </p>

    <p>
        <strong>minutes:</strong>
        <%= station.minutes %>
    </p>
  <% end %>
<% end %>

